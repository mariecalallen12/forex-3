# Digital Utopia Platform - Environment Configuration
# Copy file này thành .env và cập nhật các giá trị

# ================== Application ==================
APP_NAME="Digital Utopia Platform"
APP_VERSION="2.0.0"
DEBUG=True
ENVIRONMENT=development

# ================== API Security ==================
# QUAN TRỌNG: Phải thay đổi SECRET_KEY trong production
# Tạo key mới: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-ENV-VAR
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================== PostgreSQL Database ==================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=digital_utopia

# ================== Redis Cache ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis TTL Settings (seconds)
REDIS_SESSION_TTL=86400      # 24 hours
REDIS_CACHE_TTL=300          # 5 minutes
REDIS_RATE_LIMIT_TTL=3600    # 1 hour
REDIS_MARKET_DATA_TTL=5      # 5 seconds

# ================== CORS ==================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ================== Email (Optional) ==================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@digitalutopia.com
EMAILS_FROM_NAME=Digital Utopia Platform

# ================== File Upload ==================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# ================== Rate Limiting ==================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ================== Logging ==================
LOG_LEVEL=INFO
